extends layout

block content
  h1= title
  p Welcome to #{title}

  button#addtask(class='btn btn-info btn-sm', data-toggle='modal', data-target='#taskadd') Add New Task
  | 
  button(class='btn btn-danger btn-sm modal-open', data-toggle='modal', data-target='#taskremove' disabled=false) Remove Task
  | 
  button(class='btn btn-warning btn-sm modal-open', data-toggle='modal', data-target='#taskchange' disabled=true) Change Task
