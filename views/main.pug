  nav 
    div(class="nav nav-tabs", role="tablist")
      a#nav-today-tab(class="nav-link active", data-toggle="tab", href="#nav-today", role="tab", aria-controls="nav-today", aria-selected="true") Today
      a#nav-nextinqueue-tab(class="nav-link", data-toggle="tab", href="#nav-nextinqueue", role="tab", aria-controls="nav-nextinqueue", aria-selected="false") Next in Queue
      a#nav-history-tab(class="nav-link", data-toggle="tab", href="#nav-history", role="tab", aria-controls="nav-history", aria-selected="false") History 
      a#nav-report-tab(class="nav-link", data-toggle="tab", href="#nav-report", role="tab", aria-controls="nav-settings", aria-selected="false") Work Report
      a#nav-settings-tab(class="nav-link", data-toggle="tab", href="#nav-settings", role="tab", aria-controls="nav-settings", aria-selected="false") Settings

  div#nav-tabcontent(class="tab-content")    
    include includes/today.pug
    include includes/nextinqueue.pug
    include includes/history.pug        
    div#nav-report(class="tab-pane fade", role="tabpanel", aria-labelledby="nav-report-tab")
